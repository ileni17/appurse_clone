{% extends 'base.html.twig' %}

{% block title %}Booking index{% endblock %}

{% block body %}
    <div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <td scope="col">#</td>
                    <th scope="col">Name</th>
                    <th scope="col">Image</th>
                    <th scope="col">Score</th>
                    <th scope="col">Description</th>
                    <th scope="col">Details</th>
                </tr>
                </thead>
                <tbody>
                {% for app in apps %}
                    {% set counter = ( counter | default(0) ) + 1 %}
                    <tr>
                        <th scope="row">{{ counter }}</th>
                        <th>
                            <a href="{{ app.url }}" style="color: black; font-weight: normal">{{ app.name }}</a>
                        </th>
                        <td class="img-thumbnail" style="width: 100px; height: 100px;">
                            <img src="{{ app.icon }}"
                                 class="img-fluid img-thumbnail">
                        </td>
                        <td>{{ app.score }}</td>
                        <td>{{ app.description|length > 400 ? app.description|slice(0, 400) ~ '...' : app.description }}</td>
                        <td>
                            <a href="{{ path('app_detail', {'id': app.identificator is defined ? app.identificator : app.id}) }}" style="color: black; font-weight: normal">Details</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}