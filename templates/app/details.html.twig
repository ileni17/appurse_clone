{% extends 'base.html.twig' %}

{% block title %}{{ detail.name }} Details{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <img src="{{ detail.icon }}"
                     class="img-fluid img-thumbnail">
            </div>
            <div class="col-6">
                <p>App: <b>{{ detail.name }}</b></p>
                <p>Developer: <b>{{ detail.developerName }}</b></p>
                <p>Category: <b>{{ detail.category.name }}</b></p>
                <p>Voters: <b>{{ detail.numberVoters }}</b></p>
                <p>Reviews: <b>{{ detail.numberReviews }}</b></p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h3>Reviews</h3>
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td scope="col">#</td>
                        <th scope="col">Username</th>
                        <th scope="col">Review</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for review in detail.reviews %}
                        {% set counter = ( counter | default(0) ) + 1 %}
                        <tr>
                            <th scope="row">{{ counter }}</th>
                            <td>{{ review.userName }}</td>
                            <td>{{ review.text|length > 400 ? review.text|slice(0, 400) ~ '...' : review.text }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}